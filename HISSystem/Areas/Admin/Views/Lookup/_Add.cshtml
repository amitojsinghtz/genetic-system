@model Data.Models.Lookup
@using Data.Models

<form @*action="/admin/lookup/add" method="post" id="addLookUp"*@ >
    <div class="prtm-content">
        <div class="row mrgn-b-sm">
            <div class="col-md-4 col-lg-4">
                <input type="button" name="submit" id="addNewLookUp" onclick="AddNewLookUp();" value="Save" class="btn btn-primary sbmtBtn" />
                <input type="button" id="closeModal" name="submit" value="Back" class="btn btn-warning" />
            </div>
            <div class="col-md-4 col-lg-4">
            </div>
            <div class="col-md-4 col-lg-4">
            </div>
        </div>
        <div class="form-style">
            <div class="row">
                <div class="col-md-12 col-lg-12">
                    <div class="prtm-block pos-relative">
                        <div class="row">
                            <div class="col-md-10 col-lg-10">
                                <div class="row mrgn-l-md">

                                    <div class="form-group">
                                        <label for="Type">Type</label>
                                        @Html.TextBoxFor(m => m.Type, null, new { @Class = "form-control", @readonly = true })
                                    </div>
                                    <div class="form-group">
                                        <label for="TypeID">TypeID</label>
                                        @Html.TextBoxFor(m => m.TypeID, null, new { @Class = "form-control", @readonly = true })
                                    </div>
                                    <div class="form-group">
                                        <label for="Name">Name</label>
                                        @Html.TextBoxFor(m => m.Name, null, new { @Class = "form-control", autocomplete = "off" })
                                    </div>
                                    @if (Model.Type == "Floor")
                                    {
                                        <div class="form-group">
                                            <label for="ParentId">Select Building</label>
                                            @Html.DropDownListFor(m => m.ParentId, new SelectList(ViewBag.Buildings, "ID", "Name"), "Select Building", new { @class = "form-control" })
                                        </div>
                                    }
                                    @if (Model.Type == "Room")
                                    {
                                        <div class="form-group">
                                            <label for="BuildingsList">Select Building</label>
                                            @Html.DropDownList("BuildingsList", new SelectList(ViewBag.Buildings, "ID", "Name"), "Select Building", new { @class = "form-control", onchange = "getFloors()" })
                                        </div>
                                    }
                                    @if (Model.Type == "Room")
                                    {
                                        <div class="form-group">
                                            <label for="ParentId">Select Floor</label>
                                            @Html.DropDownListFor(m => m.ParentId, new SelectList(ViewBag.Floors, "ID", "Name"), "Select Floor", new { @class = "form-control", disabled = "disabled" })
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>



