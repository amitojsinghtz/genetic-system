@model Data.Helpers.PagedData<Data.Models.SMSGroup>
<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th style="width:100px">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.GroupName</td>
                    <td>

                        <a href="/admin/sms/updatesmsgroup?id=@item.ID"><i class="fa fa-pencil fa-md base-dark" @*onclick="editSMSGroup('@item.ID')"*@ aria-hidden="true"></i></a>

                        <a href="#" class="mrgn-l-sm"><i class="fa fa-trash fa-md base-dark" onclick="DeleteSMSGroup('@item.ID')" aria-hidden="true"></i></a>
                    </td>

                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4">
                    @for (int i = 1; i <= Model.NumberOfPages; i++)
                    {
                        <a class="page-number" onclick="getsmsgroupsearch(@i)" href="javascript:void();">@i</a>
                    }
                </td>
            </tr>
        </tfoot>

    </table>
</div>



