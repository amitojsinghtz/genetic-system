@model Data.Models.ViewControl
@using (Html.BeginForm("Update", "ViewControl", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.ID)
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Update Control View</h4>
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Name</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <label>
                           @Html.CheckBoxFor(m=>m.IsActive) <span class="label-text">IsActive</span>
                        </label>
                    </div>
                    @Html.ValidationMessageFor(m => m.IsActive, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Uri</label>
                    @Html.TextBoxFor(m => m.Uri, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Uri, null, new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn btn-outline-inverse">Close</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
}
