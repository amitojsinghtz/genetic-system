
@model Data.Models.ActionControl
@using (Html.BeginForm("Add", "ActionControl", FormMethod.Post))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Add Action Control</h4>
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Name</label>
                    @Html.TextBox("Name", null, new { @class = "form-control" })
                    @Html.ValidationMessage("Name", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <label>
                            @Html.CheckBox("IsActive", null) <span class="label-text">IsActive</span>
                        </label>
                    </div>
                    @Html.ValidationMessage("IsActive", new { @class = "text-danger" })
                </div>
            </div>
           
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn btn-outline-inverse">Close</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
}
