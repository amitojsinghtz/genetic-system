@model Data.Helpers.PagedData<Data.Models.Email>
<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Subject</th>
                <th>Body</th>
                <th style="width:100px">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Subject</td>
                    <td>@item.Body</td>
                    <td>

                        <a href="#"><i class="fa fa-pencil fa-md base-dark" onclick="editEmail('@item.ID')" aria-hidden="true"></i></a>

                        <a href="#" class="mrgn-l-sm"><i class="fa fa-trash fa-md base-dark" onclick="DeleteEmail('@item.ID')" aria-hidden="true"></i></a>
                    </td>

                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5">
                    @for (int i = 1; i <= Model.NumberOfPages; i++)
                    {
                        <a class="page-number"onclick="getemailsearch(@i)" href="javascript:void();">@i</a>
                    }
                </td>
            </tr>
        </tfoot>

    </table>
</div>