
@model Data.Models.EpilepsyTemplate

<div class="modal-dialog modal-lg">
    <!-- Modal content-->
    @using (Html.BeginForm("AddEpilpsyTemplates", "SMS", FormMethod.Post, new { enctype = "multipart/form-data", id = "createForm" }))
    {
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <center><h4 class="modal-title">New Template</h4></center>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Gene</label>
                                <div class="form-group">
                                    @Html.DropDownListFor(model => model.GeneID, new SelectList(ViewBag.Gene, "ID", "Name"), "Select Gene", new { @class = "form-control dropdown" })
                                 
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label>Genetic Mutation</label>
                                
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.GeneticMutation, new { @class = "form-control", placeholder = "GeneticMutation. . . " })

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Personal Risk Factor</label>
                                    <div class="form-group">
                                        @Html.TextBoxFor(model => model.PersonalRiskFactor, new { @class = "form-control", placeholder = "Personal Risk Factor. . . " })

                                    </div>
                            </div>
                            <div class="col-md-6">
                                <label>Herdiatery</label>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Hereditary, new { @class = "form-control", placeholder = "Herdiatery. . . " })

                                </div>
                            </div>
                            </div>
                            <div class="row">

                                <div class="col-md-6">
                                    <label>Recommendations</label>
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.Recommendations, new { @class = "form-control", placeholder = "Recommendations. . . " })

                                        </div>
</div>
                                <div class="form-group pad-tb-md">
                                    <div class="form-check">
                                        <label>
                                            @*@Html.CheckBoxFor(m => m.PersonalInformation.HaveInsurance)*@
                                            <input type="checkbox" name="HaveMutation" id="HaveMutation"><span class="label-text">Have Mutation</span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn btn-outline-inverse">Cancel</button>
                    <button type="button" onclick="SaveEpilepsy();" class="btn btn-success popup-savebtn">Save</button>
                </div>
            </div>
        </div>
    }
</div>


