    @section scripts{
        <script type="text/javascript">
        function addefitnesstemplate(){
        $.ajax({
            url: '/admin/template/AddDietTemplate',
            contentType: 'application/json; charse=utf-8',
            type: 'get',
            success: function (result) {
                $('#modalDiv').html(result);
                $('#modalDiv').modal('show');
            },
            error: function (xhr, status) {
                alert(status)
            }
        });
        }
